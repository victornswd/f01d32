---
import BaseHead from "../components/BaseHead.astro";
// import Header from '../components/Header.astro';
// import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-fred font-serif h-screen w-full flex flex-col flex-1 mx-auto">
		<div class="text-center container mx-auto px-4 flex flex-1 items-center">
			<h1 class="text-7xl font-bold text-gray-100 w-full">#f01d32</h1>
		</div>
		<div class="text-center mx-auto max-w-4xl p-4 m-8">
			<p class="text-gray-400">
				<b class="text-gray-200">folder</b>
				<i>(/ˈfōl-dər/)</i>: an organizational element of a computer operating
				system used to group files or other folders together
			</p>
			<hr class="border-grey-lighter border-t mx-auto w-4/5 opacity-50" />
			<p class="text-gray-400">
				<b class="text-gray-200">leetspeak</b>
				<i>(/ˈlētˌspēk/)</i>: an informal language or code used on the Internet,
				in which standard letters are often replaced by numerals or special
				characters that resemble the letters in appearance.
			</p>
		</div>
	</body>
</html>
